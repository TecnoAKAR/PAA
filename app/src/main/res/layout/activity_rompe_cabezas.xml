<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BF40C4FF"
    tools:context=".RompeCabezas">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="506dp"
        android:layout_height="366dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@drawable/nubes" />

    <GridView
        android:id="@+id/grid"
        android:layout_width="409dp"
        android:layout_height="525dp"
        android:layout_margin="8dp"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:verticalSpacing="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
   <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:layout_marginEnd="16dp"
       android:layout_marginBottom="16dp"
       android:layout_width="wrap_content"
       android:id="@+id/cameraButton"

       android:layout_height="wrap_content"
       android:clickable="true"
       android:tint="@color/white"
       android:onClick="onImageCameraClicked"
       android:backgroundTint="@color/purple_200"
       android:src="@drawable/ic_camera"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:id="@+id/galleryButton"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tint="@color/white"
        android:onClick="onImageGalleryClicked"
        android:backgroundTint="@color/purple_200"
        android:src="@drawable/ic_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cameraButton"
        />




    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_light"
        android:text="ROMPECABEZAS"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />


</androidx.constraintlayout.widget.ConstraintLayout>